{
    "manifest_version": 3,
    "version": "7.0.1",
    "name": "By Design m",
    "description": "removes thumbnails and plays videos in grayscale â€” so you watch only what matters, not what looks tempting",
    "homepage_url": "https://github.com/parth721/web-extention-c-",
   
   
    "default_locale": "en",
    
    "browser_specific_settings": {
        "gecko": {
           "id": "bydesign4u@yahoo.com",
           "strict_min_version": "125.0"
        }
    },


    "content_scripts": [
      {
        "matches": [
          "*://*.youtube.com/*"
